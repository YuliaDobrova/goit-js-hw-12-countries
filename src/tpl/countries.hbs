<h1 class='heading'>{{name}}</h1>
<div class='allInfo'>
  <div class='info'>
    <h2>Capital: <span>{{capital}}</span></h2>
    <h2>Population: <span>{{population}}</span></h2>
    <h2>Languages:</h2>
    <ul>
      {{#each languages}}
        <li>{{this.name}}</li>
      {{/each}}
    </ul>
  </div>
  <div class='flag'>
    <img src={{flag}} alt={{cioc}} />
  </div>
</div>